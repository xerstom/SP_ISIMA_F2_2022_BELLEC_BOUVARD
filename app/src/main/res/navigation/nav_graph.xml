<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.blindquotes.fragment.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/action_mainFragment_to_quoteFragment"
            app:destination="@id/quoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/quoteFragment"
        android:name="com.example.blindquotes.fragment.QuoteFragment"
        android:label="quote_fragment"
        tools:layout="@layout/quote_fragment" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.blindquotes.activity.MainActivity"
        android:label="main_activity"
        tools:layout="@layout/main_activity" />
</navigation>